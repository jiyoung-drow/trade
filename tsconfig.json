{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",                           
    "paths": {
      "@/*": ["./*"]                          
    },
    "types": ["node", "react", "react-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true,
    "typeRoots": ["./types", "./node_modules/@types"], // ✅ 추가
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"                          
  ],
  "exclude": ["node_modules"]
}
